<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnxietyActivity"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Introduction -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anxiety disorders encompass a range of conditions characterized by excessive and persistent feelings of anxiety and fear. These feelings can interfere with daily activities, relationships, and overall quality of life. Some common types of anxiety disorders include:"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="20dp"
                android:justificationMode="inter_word"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Generalized Anxiety Disorder (GAD):"
                android:textSize="16sp"
                android:textColor="@color/orange"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="8dp"
                android:justificationMode="inter_word"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="People with GAD experience excessive worry and fear about various aspects of their life, even when there is no specific cause for concern."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="8dp"
                android:justificationMode="inter_word"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Panic Disorder:"
                android:textSize="16sp"
                android:textColor="@color/orange"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="8dp"
                android:justificationMode="inter_word"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Panic disorder involves recurring panic attacksâ€”sudden episodes of intense fear or discomfort, often accompanied by physical symptoms like rapid heartbeat, sweating, trembling, and a sense of impending doom."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="8dp"
                android:justificationMode="inter_word"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Social Anxiety Disorder (Social Phobia):"
                android:textSize="16sp"
                android:textColor="@color/orange"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="8dp"
                android:justificationMode="inter_word"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This disorder is characterized by intense fear and avoidance of social situations due to a fear of being judged, embarrassed, or humiliated."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="8dp"
                android:justificationMode="inter_word"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Specific Phobias:"
                android:textSize="16sp"
                android:textColor="@color/orange"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="8dp"
                android:justificationMode="inter_word"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Specific phobias involve an intense and irrational fear of a particular object, situation, or activity. Common phobias include fear of heights, spiders, flying, and enclosed spaces."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="8dp"
                android:justificationMode="inter_word"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Obsessive-Compulsive Disorder (OCD):"
                android:textSize="16sp"
                android:textColor="@color/orange"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="8dp"
                android:justificationMode="inter_word"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OCD involves intrusive and distressing thoughts (obsessions) that lead to compulsive behaviors or rituals performed to reduce anxiety."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="8dp"
                android:justificationMode="inter_word"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Post-Traumatic Stress Disorder (PTSD):"
                android:textSize="16sp"
                android:textColor="@color/orange"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="8dp"
                android:justificationMode="inter_word"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PTSD can develop after exposure to a traumatic event. It involves intrusive memories, nightmares, and emotional distress related to the trauma."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"
                android:justificationMode="inter_word"/>

            <!-- Section Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/dividerHorizontal"
                android:justificationMode="inter_word"/>

            <!-- Phobias Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phobias"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingBottom="8dp"
                android:gravity="start|top"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phobias are a type of anxiety disorder characterized by an intense, irrational fear of a specific object, situation, or activity."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="8dp"
                android:justificationMode="inter_word"/>

            <!-- Treatment Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Treatment:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingBottom="8dp"
                android:gravity="start|top"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Treatment for anxiety disorders and phobias often involves a combination of approaches:"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="8dp"
                android:justificationMode="inter_word"/>

            <!-- Treatment Details -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Therapy: Cognitive-behavioral therapy (CBT) is a common approach. Exposure therapy, a type of CBT, involves gradually facing the feared stimulus."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="8dp"
                android:justificationMode="inter_word"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
