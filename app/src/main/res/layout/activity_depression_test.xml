<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:background="@color/background_color"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".DepressionTestActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please attempt all the questions honestly for accurate results."
        android:textSize="30sp"
        android:fontFamily="@font/great_vibes"
        android:textColor="#EB784E"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        />


    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:radius="8dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"/>


    <Button
        android:id="@+id/answerButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer 1"
        android:layout_marginBottom="8dp"
        android:radius="8dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"

        />

    <Button
        android:id="@+id/answerButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer 2"
        android:layout_marginBottom="8dp"
        android:radius="8dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"

        />

    <Button
        android:id="@+id/answerButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer 3"
        android:layout_marginBottom="8dp"
        android:radius="8dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"/>

    <Button
        android:id="@+id/answerButton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer 4"
        android:layout_marginBottom="8dp"
        android:radius="8dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"

        />

    <Button
        android:id="@+id/answerButton5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer 5"
        android:layout_marginBottom="16dp"
        android:radius="8dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"/>

    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/orange"/>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
